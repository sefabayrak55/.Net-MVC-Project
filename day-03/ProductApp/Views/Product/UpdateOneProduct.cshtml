@model Product

<form method="post" asp-action="UpdateOneProduct" asp-controller="Product">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="text" id="ProductName" asp-for="ProductName" placeholder="Product Name" />
        <span class="text-danger" asp-validation-for="ProductName"></span>
    </div>

    <div class="form-group">
        <input type="text" id="ProductPrice" asp-for="Price" placeholder="Product Price" />
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>

    <div class="form-group">
        <input type="text" id="ProductImg" asp-for="ImageUrl" placeholder="Product Image" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>