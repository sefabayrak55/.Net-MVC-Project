@model List<Product>


<div class="text-center">
    <h3 class="display-5">Products</h3>
</div>
<div class="d-flex justify-content-end">
    <a asp-asp-area="Admin" asp-controller="Product" asp-action="CreateOneProduct" class="btn btn-success">Add New Product</a>
</div>
<br />
<ul class="list-group">
    @foreach (var item in Model)
    {
        <li class="list-group-item">
            <div class="row">
                <div class="col">
                    <div class="row">
                        <div class="col">
                            <b>Ürün:</b>@item.ProductName
                        </div>
                        <div class="col">
                            <b>Fiyat:</b> @item.Price
                        </div>
                    </div>
                </div>
                <div class="col d-flex justify-content-end">
                    <a asp-controller="Product"
                   asp-action="UpdateOneProduct"
                   asp-route-id="@item.Id"
                   asp-area="Admin"
                   class="btn btn-warning mx-1">Update</a>
                </div>
            </div>
        </li>
    }
</ul>