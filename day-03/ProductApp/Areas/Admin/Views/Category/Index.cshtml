@model List<Category>

<div>
    <a asp-controller="Category"
       asp-action="CreateOneCategory" asp-area="Admin" class="btn btn-info my-3">Add</a>
    <ul class="list-group">
        @foreach (var categoryItem in Model)
        {
            <li class="list-group-item d-flex justify-content-between">
                <p>@categoryItem.CategoryName</p>
                <a asp-controller="Category"
               asp-action="UpdateOneCategory"
               asp-route-id="@categoryItem.Id" class="btn btn-warning">Update</a>
            </li>
        }
    </ul>
</div>